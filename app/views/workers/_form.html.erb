
<%= simple_form_for(@worker) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :emp_mode %>
    <%= f.input :role %>
    <%= f.input :email %>
    <%= f.input :reporting_manager %>
    <%= f.input :job_title %>
    <%= f.input :exprerience %>
    <%= f.input :tel %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
