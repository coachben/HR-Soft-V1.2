
<%= simple_form_for(@company) do |f| %>

  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :code %>
    <%= f.input :started_on %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :country %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to_add_association 'Hire Employee', f, :tasks, class: 'btn btn-primary', data: { association_insertion_node: '.employees', association_insertion_method: :append } %>

  </div>
<% end %>
